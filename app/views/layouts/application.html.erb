<!DOCTYPE html>
<html>
  <head>
    <title>TestApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
 

 <%= image_tag("timetracker_logo_black.png", :alt => "logo",:width=>800 ,:height=>80) %>
  <nav class="navbar navbar-light"> 
     
    <div class="navbar-brand">
         <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
    </div>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
        <li class="nav-item active"><%= link_to "Home",root_path %></li>
        <li><%= link_to "Project",projects_path %></li>
        <li><%= link_to "Work",works_path %></li>
        <li><%= link_to "User",users_path %></li>
           <li><%= link_to "Company",companies_path %></li>
    </ul>
    </div>
    </header>
    <div class="lead">
    <% if notice %>
       <div class="notice" onclick="notify()" id="notification"><%= notice  %> 
       <%= image_tag("close.png",:alt=>"close button",:width=>20, :height=>20,:id=>"notification") %></div>
    <% end %>
    <% if alert %>
       <div class="alert" onclick="notify()" id="notification"><%= alert  %> <%= image_tag("close.png",:alt=>"close button",:width=>20, :height=>20) %></div>
    <% end %>
       </div>
    <section id="main">
    
		<article>
      <%
      #[:notice, :alert].each do |level| 
        %>
        <% 
        #if flash[level]
           %>
        <div class="flash <%= #level 
        %>"><%= #flash[level]  #notice and alert and flash
       
          %></div>  
        <% # end %>
        <% #end 
            %>
			<%= yield %>
		</article>
		
	</section>
    <aside>
        <%= yield :aside %>
    </aside>    
</div>

<% if user_signed_in? %>
  <li>
  <%= link_to('Logout', destroy_user_session_path, method: :delete) %>        
  </li>
<% else %>
  <li>
  <%= link_to('Login', new_user_session_path)  %>  
  </li>
<% end %>
  <footer>
    <br>
    <p style="color:white;"><b>Time Tracker is a <em>Sample Company</em> App</b></p>
  </footer>

</body>
</html>