<div class="container"> 

<% if current_user.admin!=true%>

<%flash[:notice]="You need admin privelidges to perform edit operation!"%>

<script>
window.location="\\companies";
</script>
<%else%>
<h1>Company Edit</h1>

<%= flash[:notice] %>

	<% if @company.errors.any? %>
		<div id="errors">
			<p>Please correct the following <%= pluralize(@company.errors.count, "error") %>:</p>
			<ul>
				<% @company.errors.full_messages.each do |msg| %>
	 					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
<%= form_for(@company) do |f| %>
	<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name,class:"form-control" %>
	</div>
	<div class="form-group">
		<%= f.submit "Update Company",class:"btn btn-primary" %>
	</div>
<% end %>
<% end %>
#if
<%= link_to "Company Home",companies_path %>
</div>
