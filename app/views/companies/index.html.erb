<div class="container">
<h1>Companies index</h1>

<table class="table table-responsive">
<tr>
    <th>Company Id</th>
    <th>Company Name</th>
    <th>View Details</th>  
    <th>Edit Details</th>  
     <%if(current_user.admin)%>
       <th>Delete Company</th>
        <%end%>
</tr>

<% @company.each do |company| %>
    <tr>   
        <td><%= company.id %> 
        <td><%= company.name %></td>
        <td><%= link_to  "View Details",company %></td>
        <td><%=  link_to "Edit",edit_company_path(company.id)
        %></td>
        <%if(current_user.admin)%>
        <td><%= link_to "Delete", company_delete_path(company.id), method: :delete, data: {confirm: "You sure you want to delete the company ?"} %></td>
       <%end%>
    </tr>
<% end %>
</table><br>
<%= will_paginate @company,:class=>" ",:style=>"float:right;" %>
<aside>
    <%= render partial:"sidebar" %> 
</aside>

</div>


